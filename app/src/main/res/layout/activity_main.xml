<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgmain"
    android:paddingBottom="16dp"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="35dp"
    tools:context="com.example.bruno.jogo_galo.MainActivity">


    <Button
        android:id="@+id/pvp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="P1 vs P2"
        android:textSize="20sp"
        android:onClick="goJogo"
        android:layout_below="@+id/pve"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/pve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P1 vs AI"
        android:textSize="20sp"
        android:onClick="goJogo"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/pvp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:text="Jogo do Galo"
        android:textSize="32sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
